@using boxify.ViewModels
@model EditViewModel
@{
    ViewData["Title"] = "Edit your Ad";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>


    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <h5>Category</h5>
        <div class="form-group">
            <select name="Category" asp-for=@Model.Category>

                <option value="Electronics">Electronics</option>
                <option value="cars">Cars</option>
                <option value="animals">Animals</option>
                <option value="fashions">Fashions</option>
                <option value="services">Services</option>
            </select>
        </div>
        <div class="form-group">
            <label for="name">Title</label>
            <input type="text" class="form-control" id="name"  placeholder="Title" asp-for=@Model.Name>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price"  placeholder="0.00" asp-for=@Model.Price>
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone Number</label>
            <input type="text" class="form-control" id="phoneNumber"  placeholder="+359" asp-for=@Model.PhoneNumber>
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" placeholder="Location" asp-for=@Model.City>
        </div>
        <div class="form-group">
            <label for="imgUrl">Image</label>
            <input type="text" class="form-control" id="imgUrl"  placeholder="https://..." asp-for=@Model.ImgUrl>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description"  placeholder="..." asp-for=@Model.Description>
        </div>
        <button type="submit" class="btn btn-primary text-uppercase">Save</button>
    </form>
</div>
