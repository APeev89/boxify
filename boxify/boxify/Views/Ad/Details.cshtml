@using Microsoft.AspNetCore.Identity;
@using boxify.Data.ModelsDb
@inject UserManager<IdentityUser> userManager
@model Ad


<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImgUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h5>Contact us:</h5>
        <li>Phone: @Model.PhoneNumber</li>
        <li>City : @Model.City</li>
        </ul>
        <ul>
            <li>Info: @Model.Description</li>
            <li>Valid until: @Model.DateTo.ToString("d")</li>
        </ul>
        @if (@Model.isFavorite == false)
        {
            <span class="addToFavorites">
                <p class="button" >
                    <a class="btn btn-primary" asp-controller="Favorites" asp-action="AddToFavorites"
                   asp-route-id="@Model.Id">Add to favorites</a>
                </p>
            </span>
        }
       @if ( @Model.UserId == userManager.GetUserId(User))
       {
           <span class="EditBtn">
                <p class="button" >
                    <a class="btn btn-edit" asp-controller="Ad" asp-action="Edit"
                   asp-route-id="@Model.Id">Edit</a>
                </p>
            </span>
       }
    </div>
</div>